#!/usr/bin/env bash
set -e

CURRENT_DIR=$(dirname "$0")

test_dirs=(unit integration quickstart)
test_names=("unit tests" "integration tests" "quickstart demo tests")

for i in "${!test_dirs[@]}"; do
  echo "*********************"
  echo "Running ${test_names[$i]}..."
  "$CURRENT_DIR"/test_"${test_dirs[$i]}"
done

echo "Done"
